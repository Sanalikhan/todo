generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  status      String
  title       String
  updatedAt   DateTime @db.Date
}

model todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
